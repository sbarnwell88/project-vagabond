<div>
  <div class="container-all-views">
    <h1>Create a New City</h1>

    <div class="form-group">
    <%= form_for @city do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %> </br>

      <%= f.label :description %>
      <%= f.text_area :description, class:"form-control" %></br>

      <%= f.label :image %>
      <%= f.text_field :image, class:"form-control" %></br>

      <%= f.submit class: "btn-lrg"%>

    <% end %>
    </div>
  </div>
</div>